@model WebTableti.RemontMach

@{
    ViewBag.Title = "EditRemont";
    Layout = "~/Views/Shared/_LayoutRemont.cshtml";
}


@using (Html.BeginForm("EditRemont", "Remont", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IdRemonta)

        <br />
        <h4>Ažuriraj remont #@Model.IdRemonta</h4>
        <hr />


        @if (!String.IsNullOrEmpty(Model.DatumPov.ToString()))
        {
            <div class="form-group">
                <div class="col-md-10">
                    Datum remonta:
                    @Html.TextBoxFor(m => m.DatumOd, "{0:dd.MM.yyyy}", new { disabled = "disabled" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    Opis remonta:  @Html.EditorFor(model => model.Opis, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    Broj mašine: @Html.EditorFor(model => model.MachCode, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    Matricola:  @Html.EditorFor(model => model.MachineId, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                </div>
            </div>


            @*<div class="form-group">
                    <div class="col-md-10">
                        Datum povratka:
                        @Html.TextBoxFor(m => m.DatumPov, "{0:dd.MM.yyyy}", new { disabled = "disabled" })
                    </div>
                </div>*@

            <span class="glyphicon glyphicon-triangle-left"></span> @Html.ActionLink("Povratak na listu", "Index")
        }
        else
        {
            <div class="form-group">
                <div class="col-md-10">
                    Datum remonta:
                    @Html.TextBoxFor(m => m.DatumOd, "{0:dd.MM.yyyy}", new { disabled = "disabled" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    Opis remonta: <br />
                    @Html.TextAreaFor(model => model.Opis, new { htmlAttributes = new { @class = "form-control" }, @cols = "80", @rows = "5" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    Broj mašine:  @Html.EditorFor(model => model.MachCode, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-10">
                    Matricola:  @Html.EditorFor(model => model.MachineId, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                </div>
            </div>

            @*<div class="form-group">
                    <div class="col-md-10">
                        Datum povratka:  @Html.EditorFor(model => model.DatumPov, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>*@

            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Spremi remont" class="btn btn-success" />
                </div>
            </div>

        }


    </div>
}


